// src/components/panel/Layout/PanelLayout.astro
import { TreePalm } from "@lucide/astro";
import PillNavbar from "/Users/chinmaypatil/Desktop/Resume Docs/WebPage/mindtree_II/src/components/panel/PillNavbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/panel.css" />
    <link rel="stylesheet" href="/src/styles/panel-menu.css" />
    <link rel="stylesheet" href="/src/styles/panel-dashboard.css" />
    <style>
      /* Auth Screen Styles */
      #auth-screen {
        background: #060010;
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999999;
        transition: opacity 0.5s ease;
      }

      #auth-screen.hidden {
        opacity: 0;
        
      }

      /* Ripple Loader Background */
      .loader-inner {
        --loader-background: linear-gradient(
          10deg,
          rgba(139, 92, 246, 0.2) 0%,
          rgba(167, 139, 250, 0.2) 100%
        );
        position: absolute;
        height: 250px;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .loader-inner .box {
        position: absolute;
        background: var(--loader-background);
        border-radius: 50%;
        border-top: 1px solid rgba(139, 92, 246, 0.8);
        box-shadow: rgba(139, 92, 246, 0.3) 0 10px 20px 0;
        backdrop-filter: blur(5px);
        animation: ripple 2s infinite ease-in-out;
      }

      .loader-inner .box:nth-child(1) {
        width: 25%;
        aspect-ratio: 1/1;
        z-index: 99;
      }

      .loader-inner .box:nth-child(2) {
        inset: 30%;
        z-index: 98;
        border-color: rgba(139, 92, 246, 0.7);
        animation-delay: 0.2s;
      }

      .loader-inner .box:nth-child(3) {
        inset: 20%;
        z-index: 97;
        border-color: rgba(139, 92, 246, 0.6);
        animation-delay: 0.4s;
      }

      .loader-inner .box:nth-child(4) {
        inset: 10%;
        z-index: 96;
        border-color: rgba(139, 92, 246, 0.4);
        animation-delay: 0.6s;
      }

      .loader-inner .box:nth-child(5) {
        inset: 0;
        z-index: 95;
        border-color: rgba(139, 92, 246, 0.2);
        animation-delay: 0.8s;
      }

      @keyframes ripple {
        0% {
          transform: scale(1);
          box-shadow: rgba(139, 92, 246, 0.3) 0 10px 20px 0;
        }
        50% {
          transform: scale(1.3);
          box-shadow: rgba(139, 92, 246, 0.5) 0 30px 40px 0;
        }
        100% {
          transform: scale(1);
          box-shadow: rgba(139, 92, 246, 0.3) 0 10px 20px 0;
        }
      }

      /* Tree Icon Button */
      .tree-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10000;
        background: rgba(139, 92, 246, 0.1);
        border-radius: 50%;
        border: 2px solid rgba(139, 92, 246, 0.3);
        transition: all 0.3s ease;
        animation: breathe 3s infinite ease-in-out;
      }

      .tree-button:hover {
        background: rgba(139, 92, 246, 0.2);
        border-color: rgba(139, 92, 246, 0.5);
        transform: translate(-50%, -50%) scale(1.1);
      }

      .tree-button svg {
        width: 48px;
        height: 48px;
        color: #8b5cf6;
        transition: all 0.3s ease;
      }

      @keyframes breathe {
        0%,
        100% {
          box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
        }
        50% {
          box-shadow: 0 0 40px rgba(139, 92, 246, 0.6);
        }
      }

      /* Auth Modal */
      .auth-modal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) translateY(100px);
        z-index: 100001;
        opacity: 0;
        pointer-events: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .auth-modal.active {
        opacity: 1;
        transform: translate(-50%, -50%) translateY(0);
        pointer-events: all;
      }

      .modal-content {
        background: rgba(165, 157, 206, 0);
        /* border-radius: 16px; */
        box-shadow: 0 4px 30px rgba(9, 9, 9, 0.093);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        /* //border: 1px solid rgba(106, 85, 209, 0); */
        padding: 2.5rem 2rem;
        min-width: 320px;
        text-align: center;
      }

      .modal-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 2rem;
      }

      .oauth-buttons {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        align-items: center;
      }

      .oauth-btn {
        width: 80px;
        height: 80px;
        background: rgba(50, 42, 88, 0.119);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 0.5px solid rgba(106, 85, 209, 0);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .oauth-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 40px rgba(106, 85, 209, 0.4);
        border-color: rgba(106, 85, 209, 0.6);
      }

      .oauth-btn:active {
        transform: translateY(-2px);
      }

      .oauth-btn svg,
      .oauth-btn img {
        width: 40px;
        height: 40px;
        z-index: 1;
      }

      /* Overlay for modal */
      .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 100000;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
      }

      .modal-overlay.active {
        opacity: 1;
        pointer-events: all;
      }

      /* Mobile responsive */
      @media (max-width: 480px) {
        .loader-inner {
          height: 180px;
        }

        .tree-button {
          width: 70px;
          height: 70px;
        }

        .tree-button svg {
          width: 40px;
          height: 40px;
        }

        .modal-content {
          min-width: 280px;
          padding: 2rem 1.5rem;
        }

        .modal-title {
          font-size: 1.125rem;
        }

        .oauth-buttons {
          gap: 1rem;
        }

        .oauth-btn {
          width: 70px;
          height: 70px;
        }

        .oauth-btn svg,
        .oauth-btn img {
          width: 35px;
          height: 35px;
        }
      }

      /* Panel content wrapper
      #panel-content {
        padding-top: 2rem;
        min-height: 100vh;
        background: #06001000;
      }

      @media (max-width: 768px) {
        #panel-content {
          padding-top: 6rem;
        }
      }

      @media (max-width: 480px) {
        #panel-content {
          padding-top: 5.5rem;
        }
      } */
    </style>
  </head>
  <body>
    <!-- Auth Screen -->
    <div id="auth-screen">
      <!-- Background ripples -->
      <div class="loader-inner">
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
      </div>

      <!-- Tree Button -->
      <button class="tree-button" id="treeButton">
        <TreePalm size={48} />
      </button>

      <!-- Modal Overlay -->
      <div class="modal-overlay" id="modalOverlay"></div>

      <!-- Auth Modal -->
      <div class="auth-modal" id="authModal">
        <div class="modal-content">
          <h2 class="modal-title">Sign in with</h2>
          <div class="oauth-buttons">
            <!-- Google Button -->
            <button
              class="oauth-btn"
              id="googleBtn"
              aria-label="Sign in with Google"
            >
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                  fill="#4285F4"></path>
                <path
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                  fill="#34A853"></path>
                <path
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                  fill="#FBBC05"></path>
                <path
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                  fill="#EA4335"></path>
              </svg>
            </button>

            <!-- GitHub Button -->
            <button
              class="oauth-btn"
              id="githubBtn"
              aria-label="Sign in with GitHub"
            >
              <svg
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                fill="#ffffff"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Overlay -->
    <div class="nav-overlay" id="navOverlay"></div>

    <!-- Main Panel Content (Hidden until authenticated) -->
    <div id="panel-content" style="display: none;">
      <slot />
    </div>

    <script>
  import { supabase } from "../../../lib/supabase";

  // Check if user is already authenticated
  async function checkAuth() {
    const {
      data: { session },
    } = await supabase.auth.getSession();

    if (session) {
      hideAuthScreen();
    }
  }

  // Hide auth screen and show panel
  function hideAuthScreen() {
    const authScreen = document.getElementById("auth-screen");
    const panelContent = document.getElementById("panel-content");

    if (authScreen) authScreen.classList.add("hidden");
    if (panelContent) panelContent.style.display = "block";
  }

  // Tree button click - show modal
  const treeButton = document.getElementById("treeButton");
  const authModal = document.getElementById("authModal");
  const modalOverlay = document.getElementById("modalOverlay");

  treeButton?.addEventListener("click", () => {
    authModal?.classList.add("active");
    modalOverlay?.classList.add("active");
  });

  // Close modal on overlay click
  modalOverlay?.addEventListener("click", () => {
    authModal?.classList.remove("active");
    modalOverlay?.classList.remove("active");
  });

  // Google OAuth
  const googleBtn = document.getElementById("googleBtn");
  googleBtn?.addEventListener("click", async () => {
    const { error } = await supabase.auth.signInWithOAuth({
      provider: "google",
      options: {
        redirectTo: `${window.location.origin}/panel`,
      },
    });

    if (error) console.error("Google sign-in error:", error);
  });

  // GitHub OAuth
  const githubBtn = document.getElementById("githubBtn");
  githubBtn?.addEventListener("click", async () => {
    const { error } = await supabase.auth.signInWithOAuth({
      provider: "github",
      options: {
        redirectTo: `${window.location.origin}/panel`,
      },
    });

    if (error) console.error("GitHub sign-in error:", error);
  });

  // Check auth on page load
  checkAuth();

  // Listen for auth state changes
  supabase.auth.onAuthStateChange((event, session) => {
    if (event === "SIGNED_IN" && session) {
      hideAuthScreen();
    } else if (event === "SIGNED_OUT") {
      window.location.href = "/panel";
    }
  });

  // Hamburger Menu Toggle
  document.addEventListener("DOMContentLoaded", () => {
    const menuIcon = document.querySelector(".menu-icon");
    const nav = document.querySelector(".nav");
    const overlay = document.getElementById("navOverlay");

    menuIcon?.addEventListener("click", () => {
      menuIcon.classList.toggle("active");
      nav?.classList.toggle("active");
      overlay?.classList.toggle("active");
    });

    overlay?.addEventListener("click", () => {
      menuIcon?.classList.remove("active");
      nav?.classList.remove("active");
      overlay?.classList.remove("active");
    });

    // Logout functionality
    const logoutBtn = document.querySelector(".logout-btn");
    logoutBtn?.addEventListener("click", async () => {
      await supabase.auth.signOut();
    });
  });
</script>
  </body>
</html>
