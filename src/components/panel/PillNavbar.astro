---
// src/components/panel/PillNavbar.astro
interface Props {
  activePage: 'dashboard' | 'messages' | 'projects' | 'analytics' | 'media';
}

const { activePage } = Astro.props;
---

<style>
  .pill-navbar {
    position: fixed;
    top: 1.5rem;
    left: 50%;
    transform: translateX(-50%) translateY(0);
    z-index: 1000;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 50px;
    padding: 0.5rem;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .pill-navbar.hidden {
    transform: translateX(-50%) translateY(-150%);
  }

  .pill-nav-item {
    padding: 0.625rem 1.25rem;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 50px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .pill-nav-item:hover {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.9);
  }

  .pill-nav-item.active {
    background: rgba(139, 92, 246, 0.15);
    border-color: rgba(139, 92, 246, 0.3);
    color: #8b5cf6;
  }

  .pill-nav-divider {
    width: 1px;
    height: 20px;
    background: rgba(255, 255, 255, 0.1);
  }

  .pill-nav-item.logout {
    border-color: rgba(239, 68, 68, 0.2);
    color: rgba(239, 68, 68, 0.8);
  }

  .pill-nav-item.logout:hover {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.4);
    color: #ef4444;
  }

  /* Tablet breakpoint */
  @media (max-width: 768px) {
    .pill-navbar {
      top: 1rem;
      left: 1rem;
      right: 1rem;
      transform: translateX(0) translateY(0);
      flex-wrap: wrap;
      justify-content: center;
      max-width: calc(100% - 2rem);
      padding: 0.4rem;
      gap: 0.35rem;
    }

    .pill-navbar.hidden {
      transform: translateX(0) translateY(-150%);
    }

    .pill-nav-item {
      padding: 0.5rem 0.9rem;
      font-size: 0.75rem;
    }

    .pill-nav-divider {
      display: none;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 480px) {
    .pill-navbar {
      top: 0.75rem;
      left: 0.5rem;
      right: 0.5rem;
      max-width: calc(100% - 1rem);
      padding: 0.35rem;
      gap: 0.25rem;
      border-radius: 20px;
    }

    .pill-nav-item {
      padding: 0.4rem 0.6rem;
      font-size: 0.65rem;
      border-radius: 12px;
    }

    .pill-nav-item.logout {
      padding: 0.4rem 0.5rem;
    }
  }
</style>

<nav class="pill-navbar" id="pillNavbar">
  <a
    href="/panel"
    class:list={['pill-nav-item', { active: activePage === 'dashboard' }]}
    >Dashboard</a
  >
  <a
    href="/panel/messages"
    class:list={['pill-nav-item', { active: activePage === 'messages' }]}
    >Messages</a
  >
  <a
    href="/panel/projects"
    class:list={['pill-nav-item', { active: activePage === 'projects' }]}
    >Projects</a
  >
  <a
    href="/panel/analytics"
    class:list={['pill-nav-item', { active: activePage === 'analytics' }]}
    >Analytics</a
  >
  <a
    href="/panel/media"
    class:list={['pill-nav-item', { active: activePage === 'media' }]}
    >Media</a
  >
  <div class="pill-nav-divider"></div>
  <a
    href="/"
    class="pill-nav-item"
    onclick="sessionStorage.setItem('skipIntro', 'true')">Live Site</a
  >
  <button class="pill-nav-item logout" id="logoutBtn">Logout</button>
</nav>

<script>
  // Logout functionality
  document.getElementById('logoutBtn')?.addEventListener('click', () => {
    sessionStorage.removeItem('panel_unlocked');
    window.location.href = '/panel';
  });

  // Scroll show/hide navbar
  let lastScrollY = 0;
  let ticking = false;

  function updateNavbar() {
    const navbar = document.getElementById('pillNavbar');
    if (!navbar) return;

    const currentScrollY = window.scrollY;
    const scrollThreshold = 50; // Start hiding after 50px scroll

    if (currentScrollY > lastScrollY && currentScrollY > scrollThreshold) {
      // Scrolling down - hide navbar
      navbar.classList.add('hidden');
    } else {
      // Scrolling up or at top - show navbar
      navbar.classList.remove('hidden');
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  // Find the scrollable container (panel content has overflow)
  function getScrollContainer() {
    // Try to find the main scrollable container
    const panelContent = document.querySelector('.panel-content');
    const mainContent = document.querySelector('main');
    const body = document.body;
    
    // Check which element is actually scrollable
    if (panelContent && panelContent.scrollHeight > panelContent.clientHeight) {
      return panelContent;
    }
    if (mainContent && mainContent.scrollHeight > mainContent.clientHeight) {
      return mainContent;
    }
    return window;
  }

  document.addEventListener('DOMContentLoaded', () => {
    const scrollContainer = getScrollContainer();
    
    const handleScroll = () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          // Get scroll position from the right source
          if (scrollContainer === window) {
            lastScrollY = window.scrollY;
          } else {
            lastScrollY = (scrollContainer as HTMLElement).scrollTop;
          }
          updateNavbar();
        });
        ticking = true;
      }
    };

    // Listen to scroll on the container
    if (scrollContainer === window) {
      window.addEventListener('scroll', handleScroll, { passive: true });
    } else {
      (scrollContainer as HTMLElement).addEventListener('scroll', handleScroll, { passive: true });
    }

    // Also listen to window scroll as fallback
    window.addEventListener('scroll', handleScroll, { passive: true });
  });
</script>