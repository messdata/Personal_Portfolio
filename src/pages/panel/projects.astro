            <!-- Projects List - Large Card -->
            <div
              class="custom-bento-card custom-bento-card--large custom-bento-card--border-glow"
            >
              <div class="custom-card-header">
                <span class="custom-card-label">ALL PROJECTS</span>
                <div class="custom-card-icon">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#8b5cf6"
                    stroke-width="2"
                  >
                    <rect width="7" height="7" x="3" y="3" rx="1"></rect>
                    <rect width="7" height="7" x="14" y="3" rx="1"></rect>
                    <rect width="7" height="7" x="14" y="14" rx="1"></rect>
                    <rect width="7" height="7" x="3" y="14" rx="1"></rect>
                  </svg>
                </div>
              </div>
              <div class="custom-card-content projects-grid-content">
                {
                  allProjects.length === 0 ? (
                    <div class="empty-state">
                      <div class="empty-icon">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="40"
                          height="40"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="#8b5cf6"
                          stroke-width="2"
                        >
                          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
                          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
                        </svg>
                      </div>
                      <h3 class="empty-title">No projects yet</h3>
                      <p class="empty-text">
                        Click "New Project" to create your first project
                      </p>
                    </div>
                  ) : (
                    <div class="projects-grid">
                      {allProjects.map((project) => (
                        <div
                          class={`project-card ${!project.visible ? "draft" : ""}`}
                        >
                          {project.thumbnail_url && (
                            <img
                              src={project.thumbnail_url}
                              alt={project.title}
                              class="project-thumbnail"
                            />
                          )}
                          <div class="project-info">
                            <h3 class="project-title">{project.title}</h3>
                            <p class="project-description">
                              {project.description}
                            </p>
                            <div class="project-meta">
                              <span>
                                {new Date(
                                  project.created_at,
                                ).toLocaleDateString("en-US", {
                                  month: "short",
                                  day: "numeric",
                                  year: "numeric",
                                })}
                              </span>
                              <span>
                                {project.visible ? "üëÅÔ∏è Visible" : "üëª Hidden"}
                              </span>
                            </div>
                            <div class="project-actions">
                              <button
                                class="action-btn primary"
                                data-project-id={project.id}
                                onclick="editProject(this)"
                              >
                                Edit
                              </button>
                              <button
                                class="action-btn"
                                data-project-id={project.id}
                                data-visible={project.visible}
                                onclick="toggleVisibility(this)"
                              >
                                {project.visible ? "Hide" : "Show"}
                              </button>
                              <button
                                class="action-btn danger"
                                data-project-id={project.id}
                                onclick="deleteProject(this)"
                              >
                                Delete
                              </button>
