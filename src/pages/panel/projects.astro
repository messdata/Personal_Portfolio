  </main>

  <!-- PROJECT MODAL -->
  <div class="modal" id="projectModal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="modalTitle">New Project</h2>
        <button class="close-btn" onclick="closeModal()">√ó</button>
      </div>

      <form id="projectForm">
        <input type="hidden" id="projectId" />

        <!-- Basic Info -->
        <div class="form-section">
          <h3 class="form-section-title">Basic Information</h3>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Project Title *</label>
              <input type="text" id="title" class="form-input" required />
            </div>
            <div class="form-group">
              <label class="form-label">Category *</label>
              <select id="category" class="form-select" required>
                <option value="">Select category</option>
                <option value="Analytics">Analytics</option>
                <option value="Web Development">Web Development</option>
                <option value="Data Science">Data Science</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Description *</label>
            <textarea id="description" class="form-textarea" required
            ></textarea>
          </div>
          <div class="form-group">
            <label class="form-checkbox">
              <input type="checkbox" id="visible" />
              <span>Publish this project (make it visible on portfolio)</span>
            </label>
          </div>
        </div>

        <!-- Media -->
        <div class="form-section">
          <h3 class="form-section-title">Media</h3>
          <div class="form-group">
            <label class="form-label">Thumbnail URL (Cloudinary) *</label>
            <input type="url" id="thumbnail_url" class="form-input" required />
            <small class="form-hint">Paste your Cloudinary image URL here</small
            >
          </div>
        </div>

        <!-- Tags -->
        <div class="form-section">
          <h3 class="form-section-title">Tags</h3>
          <div class="form-group">
            <label class="form-label">Main Tags</label>
            <input
              type="text"
              id="main_tags"
              class="form-input"
              placeholder="e.g., dashboard, analytics, visualization"
            />
            <small class="form-hint">Comma-separated tags</small>
          </div>
          <div class="form-group">
            <label class="form-label">Tool Tags</label>
            <input
              type="text"
              id="tool_tags"
              class="form-input"
              placeholder="e.g., React, TypeScript, D3.js"
            />
            <small class="form-hint">Comma-separated tools used</small>
          </div>
        </div>

        <!-- Resources -->
        <div class="form-section">
          <h3 class="form-section-title">Resources</h3>
          <div class="form-group">
            <label class="form-label">Resources Link (Google Drive)</label>
            <input
              type="url"
              id="resources_link"
              class="form-input"
              placeholder="https://drive.google.com/..."
            />
            <small class="form-hint"
              >Link to project files or documentation</small
            >
          </div>
        </div>

        <!-- Slides -->
        <div class="form-section">
          <h3 class="form-section-title">Slides (Project Details)</h3>
          <p class="form-hint" style="margin-bottom: 1rem;">
            Add slides to showcase your project in the modal. Each slide has a
            title, description, and image.
          </p>

          <div id="slides-container">
            <!-- Slides will be added here dynamically -->
          </div>

          <button
            type="button"
            class="btn btn-secondary"
            onclick="addSlide()"
            style="width: 100%; margin-top: 1rem;"
          >
            + Add Slide
          </button>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" onclick="closeModal()"
            >Cancel</button
          >
          <button type="submit" class="btn btn-primary">Save Project</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    import { supabase } from "../../lib/supabase";

    let editingProjectId = null;
    let slidesData = [];

    // Slide management functions
    window.addSlide = () => {
      const slideId = Date.now();
      slidesData.push({
        id: slideId,
        title: "",
        description: "",
        imageUrl: "",
      });
      renderSlides();
    };

    window.removeSlide = (slideId) => {
      slidesData = slidesData.filter((s) => s.id !== slideId);
      renderSlides();
    };

    function renderSlides() {
      const container = document.getElementById("slides-container");

      if (slidesData.length === 0) {
        container.innerHTML =
          '<p class="form-hint">No slides added yet. Click "Add Slide" to create your first slide.</p>';
        return;
      }

      container.innerHTML = slidesData
        .map(
          (slide, index) => `
        <div class="slide-item" data-slide-id="${slide.id}">
          <div class="slide-header">
            <span class="slide-number">Slide ${index + 1}</span>
            <button type="button" class="slide-remove-btn" onclick="removeSlide(${slide.id})">√ó</button>
          </div>
          <div class="slide-fields">
            <div class="form-group">
              <label class="form-label">Slide Title</label>
              <input 
                type="text" 
                class="form-input slide-title" 
                data-slide-id="${slide.id}"
                value="${slide.title}"
                placeholder="e.g., Dashboard Overview"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Slide Description</label>
              <textarea 
                class="form-textarea slide-description" 
                data-slide-id="${slide.id}"
                placeholder="Brief description of this slide"
              >${slide.description}</textarea>
            </div>
            <div class="form-group">
              <label class="form-label">Image URL (Cloudinary)</label>
              <input 
                type="url" 
                class="form-input slide-image" 
                data-slide-id="${slide.id}"
                value="${slide.imageUrl}"
                placeholder="https://res.cloudinary.com/..."
              />
            </div>
          </div>
        </div>
      `,
        )
        .join("");

      // Add event listeners
      document.querySelectorAll(".slide-title").forEach((input) => {
        input.addEventListener("input", (e) => {
          const slideId = parseInt(e.target.getAttribute("data-slide-id"));
          const slide = slidesData.find((s) => s.id === slideId);
          if (slide) slide.title = e.target.value;
        });
      });

      document.querySelectorAll(".slide-description").forEach((textarea) => {
        textarea.addEventListener("input", (e) => {
          const slideId = parseInt(e.target.getAttribute("data-slide-id"));
          const slide = slidesData.find((s) => s.id === slideId);
          if (slide) slide.description = e.target.value;
        });
      });

      document.querySelectorAll(".slide-image").forEach((input) => {
        input.addEventListener("input", (e) => {
          const slideId = parseInt(e.target.getAttribute("data-slide-id"));
          const slide = slidesData.find((s) => s.id === slideId);
          if (slide) slide.imageUrl = e.target.value;
        });
      });
    }

    // Open modal for new project
    document.getElementById("newProjectBtn")?.addEventListener("click", () => {
      editingProjectId = null;
      document.getElementById("modalTitle").textContent = "New Project";
      document.getElementById("projectForm").reset();
      slidesData = [];
      renderSlides();
      document.getElementById("projectModal").classList.add("active");
    });

    // Close modal
    window.closeModal = () => {
      document.getElementById("projectModal").classList.remove("active");
      editingProjectId = null;
    };

    // Edit project
    window.editProject = async (button) => {
      const projectId = button.getAttribute("data-project-id");
      editingProjectId = projectId;

      try {
        const { data: project, error } = await supabase
          .from("projects")
          .select("*")
          .eq("id", projectId)
          .single();

        if (error) throw error;

        // Fill form
        document.getElementById("modalTitle").textContent = "Edit Project";
        document.getElementById("title").value = project.title;
        document.getElementById("category").value = project.category;
        document.getElementById("description").value = project.description;
        document.getElementById("thumbnail_url").value = project.thumbnail_url;
        document.getElementById("visible").checked = project.visible;
        document.getElementById("main_tags").value =
          project.main_tags?.join(", ") || "";
        document.getElementById("tool_tags").value =
          project.tool_tags?.join(", ") || "";
        document.getElementById("resources_link").value =
          project.resources_link || "";

        // Load slides
        slidesData = (project.slides || []).map((slide, index) => ({
          id: Date.now() + index,
          title: slide.title || "",
          description: slide.description || "",
          imageUrl: slide.imageUrl || "",
        }));
        renderSlides();

        document.getElementById("projectModal").classList.add("active");
      } catch (error) {
        console.error("Error loading project:", error);
        alert("Failed to load project");
      }
    };

    // Toggle visibility
    window.toggleVisibility = async (button) => {
      const projectId = button.getAttribute("data-project-id");
      const currentVisible = button.getAttribute("data-visible") === "true";

      try {
        const { error } = await supabase
          .from("projects")
          .update({ visible: !currentVisible })
          .eq("id", projectId);

        if (error) throw error;
        window.location.reload();
      } catch (error) {
        console.error("Error toggling visibility:", error);
        alert("Failed to update visibility");
      }
    };

    // Delete project
    window.deleteProject = async (button) => {
      const projectId = button.getAttribute("data-project-id");

      if (
        !confirm(
          "Are you sure you want to delete this project? This action cannot be undone.",
        )
      )
        return;

      try {
        const { error } = await supabase
          .from("projects")
          .delete()
          .eq("id", projectId);

        if (error) throw error;
        window.location.reload();
      } catch (error) {
        console.error("Error deleting project:", error);
        alert("Failed to delete project");
      }
    };

    // Form submit
    document
      .getElementById("projectForm")
      ?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = {
          title: document.getElementById("title").value,
          category: document.getElementById("category").value,
          description: document.getElementById("description").value,
          thumbnail_url: document.getElementById("thumbnail_url").value,
          visible: document.getElementById("visible").checked,
          main_tags: document
            .getElementById("main_tags")
            .value.split(",")
            .map((t) => t.trim())
            .filter(Boolean),
          tool_tags: document
            .getElementById("tool_tags")
            .value.split(",")
            .map((t) => t.trim())
            .filter(Boolean),
          resources_link:
            document.getElementById("resources_link").value || null,
          slides: slidesData.map((slide) => ({
            title: slide.title,
            description: slide.description,
            imageUrl: slide.imageUrl,
          })),
        };

        try {
          if (editingProjectId) {
            // Update existing
            const { error } = await supabase
              .from("projects")
              .update(formData)
              .eq("id", editingProjectId);

            if (error) throw error;
          } else {
            // Create new
            const { error } = await supabase
              .from("projects")
              .insert([formData]);

            if (error) throw error;
          }

          window.location.reload();
        } catch (error) {
          console.error("Error saving project:", error);
          alert("Failed to save project. Check console for details.");
        }
      });

    // Mouse glow effect
    document
      .querySelectorAll(".custom-bento-card--border-glow")
      .forEach((card) => {
        const cardElement = card as HTMLElement;

        cardElement.addEventListener("mousemove", (e) => {
          const rect = cardElement.getBoundingClientRect();
          const x = ((e.clientX - rect.left) / rect.width) * 100;
          const y = ((e.clientY - rect.top) / rect.height) * 100;

          cardElement.style.setProperty("--glow-x", `${x}%`);
          cardElement.style.setProperty("--glow-y", `${y}%`);
          cardElement.style.setProperty("--glow-intensity", "1");
        });

        cardElement.addEventListener("mouseleave", () => {
          cardElement.style.setProperty("--glow-intensity", "0");
        });
      });

    // Initialize slides
    renderSlides();
  </script>
