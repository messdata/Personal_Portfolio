---
// src/pages/panel/media.astro
import PanelLayout from "../../components/panel/Layout/PanelLayout.astro";
import PillNavbar from "../../components/panel/PillNavbar.astro";
import Particles from "../../components/welcome/Particles";

// No Supabase needed - using localStorage + Cloudinary
---

<PanelLayout title="Media - MindTree Panel">
    <style is:global>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: #060010;
            font-family:
                "Inter",
                system-ui,
                -apple-system,
                sans-serif;
        }

        :root {
            --border-color: #392e4e;
            --background-dark: #060010;
            --teal-primary: rgba(20, 184, 166, 1);
            --teal-glow: rgba(20, 184, 166, 0.2);
        }

        /* Scroll Indicators */
        .scroll-indicators {
            position: fixed;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            z-index: 999;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .scroll-indicator {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 0.5rem;
            border-radius: 8px;
            text-decoration: none;
        }

        .scroll-indicator:hover {
            background: rgba(255, 255, 255, 0.02);
        }

        .scroll-dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

        .scroll-indicator.active .scroll-dot {
            background: white;
            width: 8px;
            height: 8px;
            box-shadow: 0 0 12px rgba(255, 255, 255, 0.3);
        }

        .scroll-label {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 500;
            opacity: 0;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .scroll-indicator:hover .scroll-label,
        .scroll-indicator.active .scroll-label {
            opacity: 1;
        }

        /* Main Container */
        .panel-container {
            width: 100%;
            height: 100vh;
            overflow-y: auto;
            scroll-behavior: smooth;
        }

        .panel-container::-webkit-scrollbar {
            width: 4px;
        }

        .panel-container::-webkit-scrollbar-track {
            background: transparent;
        }

        .panel-container::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
        }

        /* Panel Section */
        .panel-section {
            position: relative;
            width: 100%;
            min-height: 100vh;
            padding: 6rem 2rem 4rem 2rem;
        }

        .section-content {
            max-width: 1400px;
            margin: 0 auto;
            z-index: 10;
        }

        /* Header */
        .section-header {
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-left h1 {
            font-size: 2rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .header-left p {
            font-size: 0.875rem;
            color: rgba(255, 255, 255, 0.4);
        }

        .upload-btn {
            padding: 0.75rem 1.5rem;
            background: linear-gradient(
                135deg,
                rgba(20, 184, 166, 0.2),
                rgba(45, 212, 191, 0.2)
            );
            border: 1px solid rgba(20, 184, 166, 0.3);
            border-radius: 8px;
            color: #14b8a6;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .upload-btn:hover {
            background: linear-gradient(
                135deg,
                rgba(20, 184, 166, 0.3),
                rgba(45, 212, 191, 0.3)
            );
            border-color: rgba(20, 184, 166, 0.5);
            transform: translateY(-2px);
        }

        /* Search Bar */
        .search-container {
            margin-bottom: 2rem;
        }

        .search-input {
            width: 100%;
            max-width: 400px;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 8px;
            color: white;
            font-size: 0.875rem;
            outline: none;
            transition: all 0.2s ease;
        }

        .search-input:focus {
            border-color: rgba(20, 184, 166, 0.5);
            background: rgba(255, 255, 255, 0.05);
        }

        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        /* Bento Grid */
        .custom-card-grid {
            display: grid;
            gap: 1rem;
            grid-template-columns: repeat(4, 1fr);
            grid-auto-rows: minmax(200px, auto);
            margin-bottom: 2rem;
        }

        /* Bento Card */
        .custom-bento-card {
            position: relative;
            background: var(--background-dark);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 1.5rem;
            overflow: hidden;
            transition: all 0.3s ease;
            color: white;
            display: flex;
            flex-direction: column;
            min-height: 200px;

            --glow-x: 50%;
            --glow-y: 50%;
            --glow-intensity: 0;
            --glow-radius: 200px;
        }

        .custom-bento-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .custom-bento-card--wide {
            grid-column: span 2;
        }

        /* Card Header */
        .custom-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }

        .custom-card-label {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.5);
            font-weight: 500;
            letter-spacing: 0.02em;
            text-transform: uppercase;
        }

        .custom-card-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.06);
        }

        .custom-card-icon svg {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        /* Card Content */
        .custom-card-content {
            display: flex;
            flex-direction: column;
            flex: 1;
            justify-content: flex-end;
        }

        .custom-card-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin: 0.75rem 0 0.25rem 0;
            color: white;
            letter-spacing: -0.02em;
        }

        .custom-card-description {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.6);
            margin: 0;
        }

        /* Border Glow Effect */
        .custom-bento-card--border-glow::after {
            content: "";
            position: absolute;
            inset: 0;
            padding: 6px;
            background: radial-gradient(
                var(--glow-radius) circle at var(--glow-x) var(--glow-y),
                rgba(20, 184, 166, calc(var(--glow-intensity) * 0.8)) 0%,
                rgba(20, 184, 166, calc(var(--glow-intensity) * 0.4)) 30%,
                transparent 60%
            );
            border-radius: inherit;
            -webkit-mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            mask-composite: exclude;
            pointer-events: none;
            opacity: 1;
            transition: opacity 0.3s ease;
            z-index: 1;
        }

        .custom-bento-card--border-glow:hover::after {
            opacity: 1;
        }

        .custom-bento-card--border-glow:hover {
            box-shadow:
                0 4px 20px rgba(20, 184, 166, 0.2),
                0 0 30px var(--teal-glow);
        }

        /* Media Grid */
        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
        }

        .media-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 12px;
            overflow: hidden;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .media-card:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(20, 184, 166, 0.3);
            transform: translateY(-4px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .media-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background: rgba(255, 255, 255, 0.02);
        }

        .media-info {
            padding: 1rem;
        }

        .media-name {
            font-size: 0.875rem;
            font-weight: 500;
            color: white;
            margin-bottom: 0.5rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .media-meta {
            display: flex;
            gap: 0.5rem;
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.4);
            margin-bottom: 0.75rem;
        }

        .media-actions {
            display: flex;
            gap: 0.5rem;
        }

        .action-btn {
            flex: 1;
            padding: 0.5rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid;
            text-align: center;
        }

        .action-btn.copy {
            background: rgba(20, 184, 166, 0.1);
            border-color: rgba(20, 184, 166, 0.3);
            color: #14b8a6;
        }

        .action-btn.copy:hover {
            background: rgba(20, 184, 166, 0.15);
            border-color: rgba(20, 184, 166, 0.5);
        }

        .action-btn.delete {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .action-btn.delete:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: rgba(239, 68, 68, 0.5);
        }

        /* Modal */
        .modal {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            z-index: 10000;
            display: none;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: #0a0a0a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            max-width: 900px;
            width: 100%;
            max-height: 90vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .modal-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: white;
        }

        .close-btn {
            width: 32px;
            height: 32px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 6px;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 1;
        }

        .close-btn:hover {
            background: rgba(239, 68, 68, 0.1);
            border-color: #ef4444;
        }

        .modal-body {
            padding: 1.5rem;
            overflow-y: auto;
        }

        .modal-image {
            width: 100%;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .modal-url {
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 6px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.75rem;
            font-family: monospace;
            word-break: break-all;
            margin-bottom: 1rem;
        }

        .modal-actions {
            display: flex;
            gap: 0.75rem;
        }

        .modal-btn {
            flex: 1;
            padding: 0.75rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid;
            text-align: center;
        }

        .modal-btn.primary {
            background: rgba(20, 184, 166, 0.1);
            border-color: rgba(20, 184, 166, 0.3);
            color: #14b8a6;
        }

        .modal-btn.primary:hover {
            background: rgba(20, 184, 166, 0.15);
            border-color: rgba(20, 184, 166, 0.5);
        }

        .modal-btn.danger {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .modal-btn.danger:hover {
            background: rgba(239, 68, 68, 0.15);
            border-color: rgba(239, 68, 68, 0.5);
        }

        /* Empty State */
        .empty-state {
            display: none;
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: rgba(20, 184, 166, 0.1);
            border: 1px solid rgba(20, 184, 166, 0.2);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
        }

        .empty-text {
            font-size: 0.875rem;
            color: rgba(255, 255, 255, 0.4);
            margin-bottom: 1.5rem;
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 10001;
            padding: 1rem 1.5rem;
            background: rgba(20, 184, 166, 0.1);
            border: 1px solid rgba(20, 184, 166, 0.3);
            border-radius: 8px;
            color: #14b8a6;
            font-size: 0.875rem;
            font-weight: 500;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .custom-card-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .custom-bento-card--wide {
                grid-column: span 2;
            }

            .media-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }

        @media (max-width: 640px) {
            .panel-section {
                padding: 5rem 1rem 3rem 1rem;
            }

            .custom-card-grid {
                grid-template-columns: 1fr;
            }

            .custom-bento-card--wide {
                grid-column: span 1;
            }

            .custom-card-title {
                font-size: 2rem;
            }

            .media-grid {
                grid-template-columns: 1fr;
            }

            .modal {
                padding: 1rem;
            }

            .modal-content {
                max-height: 95vh;
            }
        }
    </style>

    <!-- Particle Background -->
    <div
        style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 0;"
    >
        <Particles
            client:load
            particleColors={["#14b8a6", "#2dd4bf", "#5eead4"]}
            particleCount={100}
            particleSpread={30}
            speed={0.04}
            particleBaseSize={35}
            moveParticlesOnHover={true}
            particleHoverFactor={1.08}
            alphaParticles={true}
            disableRotation={false}
            sizeRandomness={1.2}
        />
    </div>

    <!-- PillNavbar -->
    <PillNavbar activePage="media" />

    <!-- Main Container -->
    <main class="panel-container">
        <section class="panel-section">
            <div class="section-content">
                <!-- Header -->
                <div class="section-header">
                    <div class="header-left">
                        <h1>Media Library</h1>
                        <p>Manage your Cloudinary images</p>
                    </div>
                    <button class="upload-btn" id="uploadBtn">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                            ></path>
                            <polyline points="17 8 12 3 7 8"></polyline>
                            <line x1="12" x2="12" y1="3" y2="15"></line>
                        </svg>
                        Upload Image
                    </button>
                </div>

                <!-- Search -->
                <div class="search-container">
                    <input
                        type="text"
                        class="search-input"
                        id="searchInput"
                        placeholder=" Search images..."
                    />
                </div>

                <!-- Stats Bento Grid -->
                <div class="custom-card-grid">
                    <!-- Total Images -->
                    <div
                        class="custom-bento-card custom-bento-card--border-glow"
                    >
                        <div class="custom-card-header">
                            <span class="custom-card-label">Total Images</span>
                            <div class="custom-card-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="#14b8a6"
                                    stroke-width="2"
                                >
                                    <rect
                                        width="18"
                                        height="18"
                                        x="3"
                                        y="3"
                                        rx="2"
                                        ry="2"></rect>
                                    <circle cx="9" cy="9" r="2"></circle>
                                    <path
                                        d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                        <div class="custom-card-content">
                            <h2 class="custom-card-title" id="totalCount">0</h2>
                            <p class="custom-card-description">Uploaded</p>
                        </div>
                    </div>

                    <!-- Recent Uploads -->
                    <div
                        class="custom-bento-card custom-bento-card--border-glow"
                    >
                        <div class="custom-card-header">
                            <span class="custom-card-label">Recent Uploads</span
                            >
                            <div class="custom-card-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="#14b8a6"
                                    stroke-width="2"
                                >
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"
                                    ></polyline>
                                </svg>
                            </div>
                        </div>
                        <div class="custom-card-content">
                            <h2 class="custom-card-title" id="recentCount">
                                0
                            </h2>
                            <p class="custom-card-description">Last 7 days</p>
                        </div>
                    </div>

                    <!-- Storage Info -->
                    <div
                        class="custom-bento-card custom-bento-card--wide custom-bento-card--border-glow"
                    >
                        <div class="custom-card-header">
                            <span class="custom-card-label">Storage Info</span>
                            <div class="custom-card-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="#14b8a6"
                                    stroke-width="2"
                                >
                                    <ellipse cx="12" cy="5" rx="9" ry="3"
                                    ></ellipse>
                                    <path
                                        d="M3 5v14c0 1.66 4.03 3 9 3s9-1.34 9-3V5"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                        <div class="custom-card-content">
                            <p class="custom-card-description">
                                Using localStorage + Cloudinary
                            </p>
                            <p
                                class="custom-card-description"
                                style="margin-top: 0.5rem; font-size: 12px;"
                            >
                                Images stored in cloud, metadata in browser
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Empty State -->
                <div class="empty-state" id="emptyState">
                    <div class="empty-icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="40"
                            height="40"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="#14b8a6"
                            stroke-width="2"
                        >
                            <rect
                                width="18"
                                height="18"
                                x="3"
                                y="3"
                                rx="2"
                                ry="2"></rect>
                            <circle cx="9" cy="9" r="2"></circle>
                            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="empty-title">No images uploaded yet</h3>
                    <p class="empty-text">
                        Click "Upload Image" to start building your media
                        library
                    </p>
                    <button
                        class="upload-btn"
                        onclick="document.getElementById('uploadBtn').click()"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                            ></path>
                            <polyline points="17 8 12 3 7 8"></polyline>
                            <line x1="12" x2="12" y1="3" y2="15"></line>
                        </svg>
                        Upload Your First Image
                    </button>
                </div>

                <!-- Media Grid -->
                <div class="media-grid" id="mediaGrid"></div>
            </div>
        </section>
    </main>

    <!-- Image Modal -->
    <div class="modal" id="imageModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Image Preview</h2>
                <button class="close-btn" onclick="closeModal()">Ã—</button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Preview" class="modal-image" />
                <div class="modal-url" id="modalUrl"></div>
                <div class="modal-actions">
                    <button class="modal-btn primary" onclick="copyModalUrl()"
                        >Copy URL</button
                    >
                    <button class="modal-btn danger" onclick="deleteImage()"
                        >Delete Image</button
                    >
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast" id="toast"></div>

    <!-- Cloudinary Upload Widget Script -->
    <script
        src="https://upload-widget.cloudinary.com/global/all.js"
        type="text/javascript"></script>

    <script is:inline>
        // ============================================
        // CONFIGURATION - Update with your Cloudinary credentials
        // ============================================
        const CLOUDINARY_CLOUD_NAME = "dbev0ugad"; // Replace with your cloud name
        const CLOUDINARY_UPLOAD_PRESET = "ml_default"; // Replace with your upload preset

        let uploadedImages = JSON.parse(
            localStorage.getItem("cloudinary_images") || "[]",
        );
        let currentImageUrl = "";

        // Initialize page
        function init() {
            renderImages();
            updateStats();
            document.getElementById("emptyState").style.display =
                uploadedImages.length === 0 ? "flex" : "none";
        }

        // Cloudinary Upload Widget
        document.getElementById("uploadBtn")?.addEventListener("click", () => {
            if (CLOUDINARY_CLOUD_NAME === "YOUR_CLOUD_NAME") {
                showToast("âš ï¸ Please configure Cloudinary credentials first!");
                return;
            }

            const widget = cloudinary.createUploadWidget(
                {
                    cloudName: CLOUDINARY_CLOUD_NAME,
                    uploadPreset: CLOUDINARY_UPLOAD_PRESET,
                    sources: ["local", "url", "camera"],
                    multiple: true,
                    maxFiles: 10,
                    clientAllowedFormats: ["png", "jpg", "jpeg", "gif", "webp"],
                    maxFileSize: 10000000, // 10MB
                    folder: "mindtree",
                    styles: {
                        palette: {
                            window: "#0a0a0a",
                            windowBorder: "#14b8a6",
                            tabIcon: "#14b8a6",
                            menuIcons: "#14b8a6",
                            textDark: "#ffffff",
                            textLight: "#ffffff",
                            link: "#14b8a6",
                            action: "#14b8a6",
                            inactiveTabIcon: "#64748b",
                            error: "#ef4444",
                            inProgress: "#14b8a6",
                            complete: "#22c55e",
                            sourceBg: "#1a1a1a",
                        },
                    },
                },
                (error, result) => {
                    if (!error && result && result.event === "success") {
                        const imageData = {
                            public_id: result.info.public_id,
                            url: result.info.secure_url,
                            thumbnail_url: result.info.thumbnail_url,
                            format: result.info.format,
                            width: result.info.width,
                            height: result.info.height,
                            size: result.info.bytes,
                            created_at: new Date().toISOString(),
                        };

                        uploadedImages.unshift(imageData);
                        localStorage.setItem(
                            "cloudinary_images",
                            JSON.stringify(uploadedImages),
                        );

                        renderImages();
                        updateStats();
                        showToast("âœ… Image uploaded successfully!");
                    }
                },
            );

            widget.open();
        });

        // Render images
        function renderImages() {
            const grid = document.getElementById("mediaGrid");
            const emptyState = document.getElementById("emptyState");

            if (uploadedImages.length === 0) {
                grid.innerHTML = "";
                emptyState.style.display = "flex";
                return;
            }

            emptyState.style.display = "none";

            grid.innerHTML = uploadedImages
                .map(
                    (img, index) => `
        <div class="media-card" onclick="openImageModal('${img.url}', ${index})">
          <img src="${img.url}" alt="${img.public_id}" class="media-image" />
          <div class="media-info">
            <div class="media-name">${img.public_id.split("/").pop()}</div>
            <div class="media-meta">
              <span>${img.format?.toUpperCase()}</span>
              <span>${formatBytes(img.size)}</span>
            </div>
            <div class="media-actions">
              <button class="action-btn copy" onclick="event.stopPropagation(); copyUrl('${img.url}')">
                Copy URL
              </button>
              <button class="action-btn delete" onclick="event.stopPropagation(); confirmDelete(${index})">
                Delete
              </button>
            </div>
          </div>
        </div>
      `,
                )
                .join("");
        }

        // Update stats
        function updateStats() {
            document.getElementById("totalCount").textContent =
                uploadedImages.length;

            const sevenDaysAgo = new Date();
            sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);
            const recentCount = uploadedImages.filter(
                (img) => new Date(img.created_at) > sevenDaysAgo,
            ).length;
            document.getElementById("recentCount").textContent = recentCount;
        }

        // Open image modal
        function openImageModal(url, index) {
            currentImageUrl = url;
            document.getElementById("modalImage").src = url;
            document.getElementById("modalUrl").textContent = url;
            document.getElementById("imageModal").classList.add("active");
        }

        // Close modal
        window.closeModal = () => {
            document.getElementById("imageModal").classList.remove("active");
        };

        // Copy URL
        window.copyUrl = (url) => {
            navigator.clipboard.writeText(url).then(() => {
                showToast("âœ… URL copied to clipboard!");
            });
        };

        // Copy URL from modal
        window.copyModalUrl = () => {
            const url = document.getElementById("modalUrl").textContent;
            navigator.clipboard.writeText(url).then(() => {
                showToast("âœ… URL copied to clipboard!");
            });
        };

        // Confirm delete
        window.confirmDelete = (index) => {
            if (confirm("Are you sure you want to delete this image?")) {
                uploadedImages.splice(index, 1);
                localStorage.setItem(
                    "cloudinary_images",
                    JSON.stringify(uploadedImages),
                );
                renderImages();
                updateStats();
                showToast("ðŸ—‘ï¸ Image deleted");
            }
        };

        // Delete image from modal
        window.deleteImage = () => {
            if (confirm("Are you sure you want to delete this image?")) {
                const index = uploadedImages.findIndex(
                    (img) => img.url === currentImageUrl,
                );
                if (index !== -1) {
                    uploadedImages.splice(index, 1);
                    localStorage.setItem(
                        "cloudinary_images",
                        JSON.stringify(uploadedImages),
                    );
                    closeModal();
                    renderImages();
                    updateStats();
                    showToast("ðŸ—‘ï¸ Image deleted");
                }
            }
        };

        // Search functionality
        document
            .getElementById("searchInput")
            ?.addEventListener("input", (e) => {
                const query = e.target.value.toLowerCase();
                const filteredImages = uploadedImages.filter((img) =>
                    img.public_id.toLowerCase().includes(query),
                );

                const grid = document.getElementById("mediaGrid");
                grid.innerHTML = filteredImages
                    .map(
                        (img, index) => `
        <div class="media-card" onclick="openImageModal('${img.url}', ${index})">
          <img src="${img.url}" alt="${img.public_id}" class="media-image" />
          <div class="media-info">
            <div class="media-name">${img.public_id.split("/").pop()}</div>
            <div class="media-meta">
              <span>${img.format?.toUpperCase()}</span>
              <span>${formatBytes(img.size)}</span>
            </div>
            <div class="media-actions">
              <button class="action-btn copy" onclick="event.stopPropagation(); copyUrl('${img.url}')">
                Copy URL
              </button>
              <button class="action-btn delete" onclick="event.stopPropagation(); confirmDelete(${uploadedImages.indexOf(img)})">
                Delete
              </button>
            </div>
          </div>
        </div>
      `,
                    )
                    .join("");
            });

        // Format bytes
        function formatBytes(bytes) {
            if (bytes === 0) return "0 Bytes";
            const k = 1024;
            const sizes = ["Bytes", "KB", "MB"];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return (
                Math.round((bytes / Math.pow(k, i)) * 100) / 100 +
                " " +
                sizes[i]
            );
        }

        // Show toast
        function showToast(message) {
            const toast = document.getElementById("toast");
            toast.textContent = message;
            toast.classList.add("show");
            setTimeout(() => {
                toast.classList.remove("show");
            }, 3000);
        }

        // Mouse glow effect
        document
            .querySelectorAll(".custom-bento-card--border-glow")
            .forEach((card) => {
                const cardElement = card;

                cardElement.addEventListener("mousemove", (e) => {
                    const rect = cardElement.getBoundingClientRect();
                    const x = ((e.clientX - rect.left) / rect.width) * 100;
                    const y = ((e.clientY - rect.top) / rect.height) * 100;

                    cardElement.style.setProperty("--glow-x", `${x}%`);
                    cardElement.style.setProperty("--glow-y", `${y}%`);
                    cardElement.style.setProperty("--glow-intensity", "1");
                });

                cardElement.addEventListener("mouseleave", () => {
                    cardElement.style.setProperty("--glow-intensity", "0");
                });
            });

        // Initialize on load
        init();
    </script>
</PanelLayout>
